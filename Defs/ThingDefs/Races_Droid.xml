    <defName>MD2DroidCorpse</defName>
    <label>dead droid</label>
    <thingClass>MD2.DroidCorpse</thingClass>
    <tickerType>Normal</tickerType>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
