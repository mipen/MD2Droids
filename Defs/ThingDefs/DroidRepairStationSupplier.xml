<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>MD2RepairStationSupplier</defName>
    <label>repair station supplier</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/Hopper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <pathCost>70</pathCost>
    <comps>
      <li>
        <compClass>MD2.CompRepairStationSupplier</compClass>
      </li>
    </comps>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <ThingDefs>
            <li>Steel</li>
          </ThingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <ThingDefs>
            <li>Steel</li>
          </ThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <WorkToMake>450</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Holds resources for use by the droid repair station.</description>
    <costList>
      <Steel>15</Steel>
    </costList>
    <tickerType>Never</tickerType>
    <rotatable>true</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <designationCategory>MD2Droids</designationCategory>
    <researchPrerequisite>MD2DroidRepairStation</researchPrerequisite>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <placeWorkers>
      <li>PlaceWorker_NextToHopperAccepter</li>
    </placeWorkers>
    <constructEffect>ConstructMetal</constructEffect>
    <designationHotKey>H</designationHotKey>
  </ThingDef>
</ThingDefs>